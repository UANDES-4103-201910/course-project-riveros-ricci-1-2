<p id="notice"><%= notice %></p>

<h1>Blacklists</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blacklists.each do |blacklist| %>
      <tr>
        <td><%= link_to blacklist.user.username, user_path(blacklist.user)%></td>
        <td><%= blacklist.start_date.strftime('%F') %></td>
        <td><%= blacklist.end_date.strftime('%F') %></td>
        <td><%= link_to 'Show', blacklist %></td>
        <td><%= link_to 'Edit', edit_blacklist_path(blacklist) %></td>
        <td><%= button_to 'Revive', blacklist, method: :delete, class: 'btn btn-warning btn-sm', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blacklist', new_blacklist_path %>

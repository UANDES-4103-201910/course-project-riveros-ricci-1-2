<h1>New Dumpster</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= simple_form_for @dumpster do |f| %>

      <%= f.error_notification %>

      <%= f.association(:user, label_method: :username, label: 'Creator') %>

      <%= f.association(:post, label_method: :description, label: 'Post') %>

      <%# TODO: Location  %>

      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>

    <% end %>
  </div>
</div>

<%= link_to 'Back', dumpsters_path %>

 <div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="<%= Faker::Placeholdit.image('100x100') %>" class="card-img">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <div class="card-title">
          <div class="d-inline-block text-primary">
            <%= Faker::Name.name %>
          </div>
          <h5 class="float-right"><%= rand(45) %></h5>
        </div>
        <div class="card-text">Ban: <%= rand(7) %> days remaining</div>
        <div class="card-text">
          <small class="text-muted"><%= 8 + rand(7) %> Flags this year</small>
          <br>
          <small class="text-muted"><%= rand(7) %> Flags this week</small>
        </div>
      </div>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Decription</th>
      <th>Is resolved</th>
      <th>Content</th>
      <th>Location latitude</th>
      <th>Location longitude</th>
      <th>City</th>
      <th>Country</th>
      <th>Is open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user %></td>
        <td><%= post.decription %></td>
        <td><%= post.is_resolved %></td>
        <td><%= post.content %></td>
        <td><%= post.location_latitude %></td>
        <td><%= post.location_longitude %></td>
        <td><%= post.city %></td>
        <td><%= post.country %></td>
        <td><%= post.is_open %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

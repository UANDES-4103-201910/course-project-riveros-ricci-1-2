<h1>Editing User</h1>

<%= simple_form_for @user do |f| %>

  <%= f.error_notification %>

  <%= f.input :username %>

  <%= f.input :email %>

  <%= f.input :password %>

  <%= f.simple_fields_for :user_profile do |profile| %>

    <%= profile.input :name %>

    <%= profile.input :bio %>

  <% end %>

  <% if @current_user.admin? %>

    <%= f.input :is_admin, label: 'Administrator' %>

    <%= f.input(:is_superadmin, label: 'Super Administrator') if @current_user.is_superadmin? %>

    <%= f.association :user_status %>

    <%= f.input :karma %>

    <%= f.input :created_at %>

  <% end %>

  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>
<% end %>
<br>
<%= link_to 'Back', @user %>

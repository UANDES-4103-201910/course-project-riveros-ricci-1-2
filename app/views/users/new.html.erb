<h1>New User</h1>

<%#= render 'form', user: @user %>

<%#= link_to 'Back', users_path %>

<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= simple_form_for @user do |f| %>

      <%= f.error_notification %>

      <%= f.input :email %>

      <%= f.input :username %>

      <%= f.input :password %>

      <%= f.input :is_admin, label: 'Create an admin?' if @current_user.admin? %>

      <%= f.input :is_superadmin, label: 'Create a SuperAdmin?'if @current_user.is_superadmin? %>

      <%= f.association :user_status, method_label: 'name' if @current_user.admin? %>


      <%= f.button :submit, class: "btn-primary" %>
      <%= f.button :button, "Reset", type: "reset", class: "btn-outline-secondary" %>

    <% end %>

  </div>
</div>
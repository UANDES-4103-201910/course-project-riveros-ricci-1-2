<h1>Search results</h1>
<h2>Users</h2>
<table class="table">
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
  </tr>
  </thead>

  <tbody>
  <% @users&.each do |user| %>
    <tr>
      <td><%= link_to user.username, user_path(user)%></td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Posts</h2>
<table class="table">
  <thead>
  <tr>
    <th>Tile</th>
    <th>Creator</th>
  </tr>
  </thead>

  <tbody>
  <% @posts&.each do |post| %>
    <tr>
      <td><%= link_to post.description, post_path(post)%></td>
      <td><%= link_to post.user.username, user_path(post.user)%></td>
    </tr>
  <% end %>
  </tbody>
</table>
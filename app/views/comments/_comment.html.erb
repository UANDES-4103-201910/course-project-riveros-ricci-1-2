<div class="row mt-1">
  <div class="card col-12">
    <div class="card-header">
      <div class="float-left">
        <%= octicon "arrow-up" %>
        <%= octicon "arrow-down" %>
      </div>
      <%= render partial: 'shared/user_and_picture', locals: {user: comment.user} %>
      <span class="text-muted"> 256 points</span>
      <%= render partial: 'shared/date_ago', locals: {html_class: 'text-muted float-right', date: comment.created_at} %>
      <%= link_to('Edit', edit_comment_path(comment), class: 'btn btn-warning btn-sm float-right p-0 mr-2') if @current_user == comment.user %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= comment.content %></p>
    </div>
  </div>
</div>
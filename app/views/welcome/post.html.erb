<%# Post %>
<div class="row">
  <div class="card" style="width: auto;">
    <div class="card-header">
      <%= render 'user_and_picture' %>
    </div>
    <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">
      <title>Placeholder</title>
      <rect width="100%" height="100%" fill="#868e96"></rect>
      <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image placeholder</text>
    </svg>
    <div class="card-body">
      <h5 class="card-title"><%= Faker::Lorem.sentence(4) %></h5>
      <div class="card-text">
        <% 3.times do |t|  %>
          <p><%= Faker::Lorem.paragraph_by_chars(256, true) %></p>
        <% end %>
      </div>
    </div>
    <div class="card-footer">
      <%# TODO: maybe a partial%>
      1.021 Points. Up Down Flag etc...
    </div>
  </div>
</div>
<div class="row mt-1">
<!--  <span class="col-1"></span>-->
  <div class="col-4 card">
    <a class="card-header" data-toggle="collapse" href="#attachmentCollapse">Attachments</a>
    <div class="card-body collapse" id="attachmentCollapse">
      <ul class="inline">
        <li><a href="#">File 1 link</a></li>
        <li><a href="#">File 2 link</a></li>
      </ul>
    </div>
  </div>
</div>
<%# Comments  %>
<% 6.times do |c| %>
  <div class="row mt-1">
    <div class="card col-12">
      <div class="card-header">
        <div class="float-left">
          <%= octicon "arrow-up" %>
          <%= octicon "arrow-down" %>
        </div>
        <%= render 'user_and_picture' %>
        <span class="text-muted"> 256 points</span>
        <div class="text-muted float-right"><%= c %> days ago</div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= Faker::Lorem.sentence(10) %></p>
      </div>
    </div>
  </div>
<% end %>
